{
  "group": {
    "default": {
      "targets": ["aws", "standard"]
    }
  },
  "target": {
    "common": {
      "context": ".",
      "platforms": ["linux/amd64", "linux/arm64"]
    },
    "aws": {
      "inherits": ["common"],
      "dockerfile": "Dockerfile",
      "target": "aws",
      "tags": ["redislabs/agent-memory-server-aws:0.12.3-fork"]
    },
    "standard": {
      "inherits": ["common"],
      "dockerfile": "Dockerfile",
      "target": "standard",
      "tags": ["redislabs/agent-memory-server:latest"]
    }
  }
}
