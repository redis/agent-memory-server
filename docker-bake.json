{
  "group": {
    "default": {
      "targets": ["aws", "standard"]
    },
    "all": {
      "targets": ["aws", "standard", "standalone"]
    }
  },
  "target": {
    "common": {
      "context": ".",
      "platforms": ["linux/amd64", "linux/arm64"]
    },
    "aws": {
      "inherits": ["common"],
      "dockerfile": "Dockerfile",
      "target": "aws",
      "tags": ["redislabs/agent-memory-server-aws:${REDIS_AGENT_MEMORY_AWS_VERSION:-latest}"]
    },
    "standard": {
      "inherits": ["common"],
      "dockerfile": "Dockerfile",
      "target": "standard",
      "tags": ["redislabs/agent-memory-server:${REDIS_AGENT_MEMORY_VERSION:-latest}"]
    },
    "standalone": {
      "inherits": ["common"],
      "dockerfile": "Dockerfile.standalone",
      "target": "standalone",
      "tags": ["redislabs/agent-memory-server:${REDIS_AGENT_MEMORY_VERSION:-latest}-standalone"]
    }
  }
}
